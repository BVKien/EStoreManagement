@page
@using Microsoft.AspNetCore.Http;
@model SalesRazorPagesApp.Pages.MainPageModel
@{
    // Bui Van Kien
    // Get user's role and email
    var role = HttpContext.Session.GetString("role");
    var email = HttpContext.Session.GetString("email");
}

@* Style *@
<style>
    .button-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }
</style>

@* Bui Van Kien *@
@* Role division *@
@if (role == "admin")
{
    <h1>Welcome, Admin!</h1>
    <p>You have administrative privileges.</p>
}
else if (role == "member")
{
    <h1>Welcome, @email!</h1>
    <p>You are logged in as a member.</p>
}
else
{
    <h1>Welcome, Guest!</h1>
    <p>Please log in to access the main page.</p>
}
